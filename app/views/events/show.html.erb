<h1>Indvidual Events page</h1>
<h3> <%=@event.name%> </h3>
Host <p> <%=@event.host%> </p>
Location <p> <%=@event.city%>, <%=@event.state%> </p>
<%@users_attending.each do |x|%>
	<li> <%=x.first_name%> <%=x.last_name%>  <%=x.city%> </li>
<%end%>	
<h3> Discussion about this event: </h3>
	<p> Add Comment </p>
	<form action='/comments' method="POST">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="text" name="comment">
	<input type='hidden' name="event_id" value="<%=@event.id%>">
	<button type="submit"> Submit Commments </button>
</form> 
<div id="bar" style="overflow-y: scroll; height:150px; background:blue">
	<p> test </p>
<% @comments.each do |x|%>
	<li> <%=x.user.first_name%> says <%= x.comment %> </li>
<%end%>
</div>
